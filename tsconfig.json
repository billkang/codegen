{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./packages",
    "sourceMap": false,
    "target": "es2016",
    "newLine": "LF",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["jest", "node"],
    "paths": {
      "@codegen/*": ["packages/*/src"]
    }
  }
}
